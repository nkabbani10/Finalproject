<div>
  <div>
    <h1>
      List of all investors
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new investor
    </h2>

    <form action="/insert_investor" method="post" class="form-horizontal" enctype="multipart/form-data">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="text" id="dob_box" name="query_dob">
      </div>

      <div>
        <label for="bio_box">
          Previous investments
        </label>

        <input type="text" id="bio_box" name="query_bio">
      </div>

      <div>
        <label for="image">
          Image
        </label>

        <input type="file" id="image" name="image" class="form-control">
      </div>

      <button>
        Create investor
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Dob
        </th>

        <th>
          Previous Investments
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_investors.each do |an_investor| %>
      <tr>
        <td>
          <%= an_investor.id %>
        </td>

        <td>
          <%= an_investor.name %>
        </td>

        <td>
          <%= an_investor.dob %>
        </td>

        <td>
          <%= an_investor.bio %>
        </td>

        <td>
          <img src="<%= an_investor.image %>" class="img-responsive">
        </td>

        <td>
          <%= time_ago_in_words(an_investor.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_investor.updated_at) %> ago
        </td>

        <td>
          <a href="/investors/<%= an_investor.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
