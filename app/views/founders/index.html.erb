<div>
  <div>
    <h1>
      List of all founders
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new founder
    </h2>

    <form action="/insert_founder" method="post" class="form-horizontal" enctype="multipart/form-data">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <input type="text" id="bio_box" name="query_bio">
      </div>

      <div>
        <label for="image">
          Image
        </label>

        <input type="file" id="image" name="image" class="form-control">
      </div>

      <button>
        Create founder
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Dob
        </th>

        <th>
          Bio
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_founders.each do |a_founder| %>
      <tr>
        <td>
          <%= a_founder.id %>
        </td>

        <td>
          <%= a_founder.name %>
        </td>

        <td>
          <%= a_founder.dob %>
        </td>

        <td>
          <%= a_founder.bio %>
        </td>

        <td>
          <img src="<%= a_founder.image %>" class="img-responsive">
        </td>

        <td>
          <%= time_ago_in_words(a_founder.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_founder.updated_at) %> ago
        </td>

        <td>
          <a href="/founders/<%= a_founder.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
