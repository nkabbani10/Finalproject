<div>
  <div>
    <h1>
      Founder #<%= @the_founder.id %> details
    </h1>

    <div>
      <div>
        <a href="/founders">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_founder/<%= @the_founder.id %>">
          Delete founder
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_founder.name %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @the_founder.dob %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_founder.bio %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @the_founder.image %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_founder.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_founder.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit founder
    </h2>

    <form action="/modify_founder/<%= @the_founder.id %>"  method="post" class="form-horizontal" enctype="multipart/form-data">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_founder.name %>">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob" value="<%= @the_founder.dob %>">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <input type="text" id="bio_box" name="query_bio" value="<%= @the_founder.bio %>">
      </div>

      <div>
        <label for="image">
          Image
        </label>

        <input type="file" id="image" name="image" class="form-control" value="<%= @the_founder.image %>">
      </div>

      <button>
        Update founder
      </button>
    </form>
  </div>
</div>

<hr>
