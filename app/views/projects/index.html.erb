<div>
  <div>
    <h1>
      List of all projects
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new project
    </h2>

    <form action="/insert_project" method="post" class="form-horizontal" enctype="multipart/form-data">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="founded_box">
          Year founded
        </label>

        <input type="text" id="founded_box" name="query_founded">
      </div>

      <div>
        <label for="funding_box">
          Funding (in USD)
        </label>

        <input type="text" id="funding_box" name="query_funding">
      </div>

      <div>
        <label for="description_box">
          Twitter pitch
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="image">
          Logo
        </label>

        <input type="file" id="image" name="image" class="form-control">
      </div>

      <button>
        Post project
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Founded
        </th>

        <th>
          Funding
        </th>

        <th>
          Description
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_projects.each do |a_project| %>
      <tr>
        <td>
          <%= a_project.id %>
        </td>

        <td>
          <%= a_project.name %>
        </td>

        <td>
          <%= a_project.founded %>
        </td>

        <td>
          <%= a_project.funding %>
        </td>

        <td>
          <%= a_project.description %>
        </td>

        <td>
          <img src="<%= a_project.image %>" class="img-responsive">
        </td>

        <td>
          <%= time_ago_in_words(a_project.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_project.updated_at) %> ago
        </td>

        <td>
          <a href="/projects/<%= a_project.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
